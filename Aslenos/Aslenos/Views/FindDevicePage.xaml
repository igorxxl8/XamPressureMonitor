<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Aslenos.Views.FindDevicePage"
             Title="Devices">
    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="MenuItemCancel" Order="Primary" Text="Cancel" Priority="0" Clicked="OnCancelClicked" />
        <ToolbarItem x:Name="MenuItemConnect" Order="Primary" Text="Connect" Priority="0" Clicked="OnConnectClicked"/>
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        
        <StackLayout>
            
            <ListView x:Name="DevicesList">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>

                            <StackLayout Orientation="Vertical">
                                <Label Margin="10" Text="{Binding Name}"/>
                                <Label Margin="10" Text="{Binding Address}"/>
                            </StackLayout>
                            
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            
        </StackLayout>
        
    </ContentPage.Content>
    
</ContentPage>